---
import Analytics from "@/components/analytics.astro";
import ResumeDownloadBtn from "@/components/resume-download-btn";
import ResumeSection from "@/components/resume-section.astro";
import "@fontsource/poppins";

const socials = [
  {
    href: "mailto:mail@xanderbarkhatov.com",
    label: "mail@xanderbarkhatov.com",
    iconClass: "i-lucide-mail",
  },
  {
    href: "https://xanderbarkhatov.com",
    label: "xanderbarkhatov.com",
    iconClass: "i-lucide-globe",
  },
  {
    href: "https://linkedin.com/in/xanderbarkhatov",
    label: "in/xanderbarkhatov",
    iconClass: "i-lucide-linkedin",
  },
  {
    href: "https://twitter.com/xanderbarkhatov",
    label: "@xanderbarkhatov",
    iconClass: "i-lucide-twitter",
  },
  {
    href: "https://github.com/xanderbarkhatov",
    label: "xanderbarkhatov",
    iconClass: "i-lucide-github",
  },
];

const jobs = [
  {
    company: "Uzum Technologies",
    position: "Senior Frontend Engineer",
    date: ["December 2023", "Present"],
    achievements: [
      "Developing a new product from the ground up, making technical and architectural decisions.",
      "Conducting job interviews.",
      "Developing and supporting multiple products.",
      "Refactoring and improving old parts of the codebases.",
      "Participating in code reviews.",
    ],
  },
  {
    company: "Uzum Technologies",
    position: "Frontend Engineer",
    date: ["August 2022", "November 2023"],
    achievements: [
      "Developed and supported multiple products.",
      "Refactored and improved old parts of the codebases.",
      "Participated in code reviews.",
      "Migrated one of the projects from Webpack 4 to Webpack 5, speeding up deploys.",
      "Migrated one of the projects from Node 14 to Node 18, speeding up deploys.",
      "Integrated and configured Tailwind CSS, speeding up development of new features.",
      "Integrated and configured Flagsmith, simplifying feature flags management.",
    ],
  },
  {
    company: "BirdsBuild",
    position: "Frontend Engineer",
    date: ["February 2021", "July 2022"],
    achievements: [
      "Played a key role in building a B2B marketplace.",
      "Lead the development of an admin app for the marketplace, optimizing internal processes.",
      "Lead the migration from JavaScript to TypeScript.",
      "Lead the migration from Vue 3 to Nuxt 3, improving application performance and SEO.",
      "Lead the development of a landing page using Nuxt 3, contributing to user acquisition.",
      "Actively contributed to the project's architecture and structure, ensuring it was well-organized, effective, and scalable.",
      "Contributed to UI Kit development, improving design consistency and frontend efficiency.",
      "Researched and incorporated Storybook for UI Kit, facilitating component testing and documentation.",
      "Contributed to performance optimizations and SEO.",
      "Configured and managed essential tools (Webpack, Vite, Eslint, Stylelint, Prettier, etc.).",
      "Managed the GitLab repository and CI/CD workflows.",
      "Participated in code reviews and mentored junior developers.",
    ],
  },
  {
    company: "Rosneft",
    position: "Fullstack Engineer",
    date: ["February 2020", "January 2021"],
    achievements: [
