const languages = ["English", "Russian"];

const courses = [
  {
    title: "React.gg by ui.dev",
    date: "November 2023",
  },
  {
    title: "Official Vue.js Certification by Vue School & Vue.js",
    date: "October 2023",
  },
  {
    title: "React - The Full Course by fireship.io",
    date: "October 2023",
  },
  {
    title: "Mastering Nuxt by Vue School",
    date: "November 2022",
  },
];

const projects = [
  {
    title: "emojisearch.fun",
    href: "https://emojisearch.fun",
    description: "AI-powered emoji search.",
    stack: "TypeScript, Vue.js, Nuxt, Tailwind CSS, Redis & OpenAI API",
  },
  {
    title: "t.me/cinesharebot",
    href: "https://t.me/cinesharebot",
    description:
      "Telegram bot for searching and sharing movies and shows in any chat.",
    stack: "TypeScript & Node.js",
  },
  {
    title: "xanderbarkhatov.com",
    href: "https://xanderbarkhatov.com",
    description: "My personal website.",
    stack: "TypeScript, Astro, Tailwind CSS",
  },
];
---

<html lang="en" class="bg-gray-100 antialiased print:bg-white">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Software Engineer" />
    <meta property="og:title" content="Alexander Barkhatov" />
    <meta property="og:description" content="Software Engineer" />
    <title>Alexander Barkhatov</title>
  </head>
  <body class="py-10 font-sans print:py-0">
    <Analytics />

    <a
      href="/files/Resume - Alexander Barkhatov.pdf"
      download="Resume - Alexander Barkhatov.pdf"
      class="fixed right-5 top-5 flex items-center gap-2 rounded bg-gray-800 px-4 py-2 text-white shadow-lg transition hover:bg-gray-700 print:hidden"
    >
      <span class="i-lucide-download"></span>
      <span>Download PDF</span>
    </a>

    <main
      class="prose prose-sm mx-auto grid max-w-[900px] grid-cols-3 gap-x-3 gap-y-5 rounded bg-gray-50 p-10 shadow prose-headings:m-0 prose-h3:text-base prose-p:m-0 prose-ul:mb-0 print:bg-white print:p-0 print:shadow-none"
    >
      <div class="col-span-2">
        <h1>Alexander Barkhatov</h1>
        <p>Software Engineer with over 4 years of experience</p>
      </div>

      <div class="flex flex-col gap-1">
        {
          socials.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 text-sm no-underline"
            >
              <span class:list={[social.iconClass, "shrink-0"]} />
              <span>{social.label}</span>
            </a>
          ))
        }
      </div>

      <div class="col-span-2 flex flex-col gap-6">
        <ResumeSection title="About" icon="i-lucide-user">
          I am driven by a love for continuous exploration and learning,
          creating captivating user experiences, solving problems, and writing
          clean and efficient code.
        </ResumeSection>

        <ResumeSection title="Work" icon="i-lucide-briefcase">
          <div class="flex flex-col gap-3">
            {
              jobs.map((job) => (
                <div>
                  <h3>
                    {job.position} at {job.company}
                  </h3>

                  <p class="text-xs text-gray-500">{job.date.join(" - ")}</p>

                  <ul>
                    {job.achievements.map((achievement) => (
                      <li>{achievement}</li>
                    ))}
                  </ul>
                </div>
              ))
            }
          </div>
        </ResumeSection>

        <ResumeSection title="Education" icon="i-lucide-graduation-cap">
          <h3>Bachelor of Computer Science, Tyumen State University</h3>
          <p class="text-xs text-gray-500">September 2016 - July 2020</p>
        </ResumeSection>

        <ResumeSection
          title="Courses and certificates"
          icon="i-lucide-badge-check"
        >
          <div class="flex flex-col gap-3">
            {
              courses.map((course) => (
                <div>
                  <h3>{course.title}</h3>
                  <p class="text-xs text-gray-500">{course.date}</p>
                </div>
              ))
            }
          </div>
        </ResumeSection>

        <ResumeSection title="Projects" icon="i-lucide-lightbulb">
          <div class="flex flex-col gap-3">
            {
              projects.map((project) => (
                <div>
                  <a
                    href={project.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-baseline gap-1 no-underline"
                  >
                    <h3>{project.title}</h3>
                    <span class="i-lucide-link h-3 w-3" />
                  </a>

                  <p>{project.description}</p>

                  <p class="text-xs text-gray-500">{project.stack}</p>
                </div>
              ))
            }
          </div>
        </ResumeSection>
      </div>

      <div class="flex flex-col gap-5">
        <ResumeSection title="Skills" icon="i-lucide-wrench">
          <ul>
            {skills.map((skill) => <li>{skill}</li>)}
          </ul>
        </ResumeSection>

        <ResumeSection title="Languages" icon="i-lucide-globe">
          <ul>
            {languages.map((language) => <li>{language}</li>)}
          </ul>
        </ResumeSection>
      </div>
    </main>
  </body>
</html>
