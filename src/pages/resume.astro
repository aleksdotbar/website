---
import Analytics from "@/components/analytics.astro";
import ResumeSection from "@/components/resume-section.astro";
import "@fontsource/poppins";

const socials = [
  {
    href: "mailto:mail@xanderbarkhatov.com",
    label: "mail@xanderbarkhatov.com",
    iconClass: "i-lucide-mail",
  },
  {
    href: "https://xanderbarkhatov.com",
    label: "xanderbarkhatov.com",
    iconClass: "i-lucide-globe",
  },
  {
    href: "https://linkedin.com/in/xanderbarkhatov",
    label: "in/xanderbarkhatov",
    iconClass: "i-lucide-linkedin",
  },
  {
    href: "https://twitter.com/xanderbarkhatov",
    label: "@xanderbarkhatov",
    iconClass: "i-lucide-twitter",
  },
  {
    href: "https://github.com/xanderbarkhatov",
    label: "xanderbarkhatov",
    iconClass: "i-lucide-github",
  },
];

const jobs = [
  {
    company: "Uzum Technologies",
    position: "Frontend Engineer",
    date: ["August 2017", "August 2018"],
    achievements: [
      "Developing internal applications.",
      "Participating in sprint planning and code reviews.",
      "Migrated the project from Webpack 4 and Node 14 to Webpack 5 and Node 18, speeding up deployments.",
      "Integrated and configured Tailwind CSS, speeding up the development of new features.",
      "Integrated and configured Flagsmith, simplifying feature flags management.",
