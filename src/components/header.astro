---
const links = [
  {
    label: "Projects",
    href: "#projects",
  },
  {
    label: "OSS",
    href: "#oss",
  },
];
---

<header
  class="sticky top-0 z-40 border-b border-gray-400/5 shadow-sm backdrop-blur-md"
>
  <nav
    class="mx-auto flex h-16 max-w-4xl items-center justify-between gap-6 px-6 font-medium text-gray-400"
  >
    <a
      href="#hello"
      class="mr-auto text-lg font-bold uppercase tracking-wider transition hover:text-gray-200"
    >
      AB
    </a>

    {
      links.map((x) => (
        <a href={x.href} class="transition hover:text-gray-200">
          {x.label}
        </a>
      ))
    }
  </nav>
</header>
